#include <iostream>
using namespace std ;

int main(void) {
    float value, sum ;
    int i, n ;
    cout << "How many values ?" ;
    cin >> n ;
    sum = 0 ;
    for (i = 1 ; i <= n ; i = i + 1) {
        cout << "Give the values !" ;
        cin >> value;
        sum = sum + value ;
    }
    sum = sum / n ;
    cout << "The average is " << sum << "." ;
}
