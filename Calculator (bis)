#include <iostream>
using namespace std ;

int main(void) {
    float a, b ;
    char operator ;
    cout << "Give the two operands !" ;
    cin >> a >> b ;
    cout << "Give the operation !" ;
    cin >> operator;
    switch (operator) {
        case '+' : cout << a + b ;
            break ;
        case '-' : cout << a - b ;
            break ;
        case '*' : cout << a * b ;
            break ;
        case '/' : if (b != 0) {
            cout << a / b ;
            }
            else {
                cout << "±∞" ;
            }
            break ;
        default : cout << "Inexistant operator." ;
            break ;
    }
    return 0 ;
}
