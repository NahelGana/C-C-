#include <iostream>
using namespace std ;

int main(void) {
    int n, i ;
    for (i = 1 ; i <= 20 ; i = i + 1) {
        cout << "Give an integer !" ;
        cin >> n ;
        if (n % 2 == 0) {
            cout << n / 2 ;
        }
        else {
            cout << 3 * n + 1 ;
        }
    }
}
