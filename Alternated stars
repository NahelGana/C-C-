#include <iostream>
using namespace std ;

int main(void) {
    int i, n ;
    cout << "Length of the line ?" ;
    cin >> n ;
    for (i = 1 ; i <= n ; i = i + 1) {
        if (i % 2 == 0) {
            cout << " " ;
        }
        else {
            cout << "*" ;
        }
    }
    return 0 ;
}
