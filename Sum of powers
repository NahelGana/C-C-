#include <iostream>
using namespace std ;

int main(void) {
    int n, i, sum, power ;
    cout << "Give the number of values !" ;
    cin >> n ;
    sum = 0 ;
    power = 1 ;
    for (i = 0 ; i <= n - 1 ; i = i + 1) {
        if (i > 0) {
            power = power * 2 ;
        }
        sum = sum + power ;
    }
    cout << sum ;
    return 0 ;
}
