#include <iostream>
using namespace std ;

int main(void) {
    int i, j, length, width ;
    cout << "What is the length and the width of the cross ?" ;
    cin >> length >> width ;
    for (i = 1 ; i <= width ; i = i + 1) {
        for (j = 1 ; j <= length ; j = j + 1) {
            if (i == width / 2 + 1 || j == length / 2 + 1) {
                cout << "*" ;
            }
            else {
                cout << " " ;
            }
        }
        cout << endl ;
    }
    return 0 ;
}
