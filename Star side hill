#include <iostream>
using namespace std ;

int main(void) {
    int i, j, n ;
    cout << "What is the height of the figure ?" ;
    cin >> n ;
    for (i = 1 ; i <= n / 2 ; i = i + 1) {
        for (j = 1 ; j <= i ; j = j + 1) {
            cout << "*" ;
        }
        cout << endl ;
    }
    for (i = n / 2 + 1 ; i <= n ; i = i + 1) {
        for (j = 1 ; j <= n - i + 1 ; j = j + 1) {
            cout << "*" ;
        }
        cout << endl ;
    }
    return 0 ;
}
